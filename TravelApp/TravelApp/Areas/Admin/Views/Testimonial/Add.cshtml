@model List<Language>
<div id="form-wrapper">
    <p>Dil seçərək aşağıdakı məlumatları doldurun.</p>
    <select id="choose-language" class="my-3 form-control">
        @{
            var counter = 0;
        }
        @foreach (Language language in Model)
        {
            if (counter == 0)
            {
                <option selected value=".@language.Name">@language.Name</option>
            }
            else
            {
                <option value=".@language.Name">@language.Name</option>
            }
            counter++;
        }
    </select>
    <form action="@Url.Action("Add","Testimonial")" method="post" enctype="multipart/form-data">
        <select hidden multiple name="Photos" id="photos">
        </select>
        <label>
            Ad
        </label>
        <input type="text" name="Name" class="my-3 form-control" value="" />
        @{
            counter = 0;
        }
        @foreach (Language language in Model)
        {
            if (counter == 0)
            {
                <div class="@language.Name active form-element">
                    <div class="form-group">
                        <label>Təsvir</label>
                        <textarea rows="10" cols="10" name="Texts" class="form-control"></textarea>
                    </div>
                </div>
            }
            else
            {
                <div class="@language.Name form-element">
                    <div class="form-group">
                        <label>Təsvir</label>
                        <textarea rows="10" cols="10" name="Texts" class="form-control"></textarea>
                    </div>
                </div>
            }
            counter++;
        }
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-danger">Yadda saxla</button>
        </div>
    </form>
</div>

