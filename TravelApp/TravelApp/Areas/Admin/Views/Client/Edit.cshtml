@model Client
<div id="form-wrapper">
    <form action="@Url.Action("Edit","Client")" method="post" enctype="multipart/form-data">
        <select hidden multiple name="Photos" id="photos">
        </select>
        <select hidden multiple name="DeletePhotos" id="delete-photos">
        </select>
        <input type="text" hidden name="ClientId" value="@Model.Id" />
        <input type="text" class="form-control" name="Name" value="@Model.Name" />
        <div class="my-5 image-upload">
            <label>Upload Photo</label>
            <input class="photo-upload-input" type="file" data-single="true" value="" />
        </div>
        <div class="image-view">
            <ul class="d-flex">
                <li>
                    <span class="btn btn-danger delete-photo-button">Sil</span>
                    <img data-delete="true" data-name="@Model.Logo" src="~/Uploads/Clients/@Model.Logo" alt="Alternate Text" />
                </li>
            </ul>
        </div>
        <div class="form-group">
            <button type="button" data-path="Clients" class="submit-button btn btn-block btn-danger">ADD</button>
        </div>
    </form>
</div>

