<div id="form-wrapper">
    <form action="@Url.Action("Add","Client")" method="post" enctype="multipart/form-data">
        <select hidden multiple name="Photos" id="photos">
        </select>
        <label>Name</label>
        <input type="text" class="form-control" name="Name" value="" />
        <div class="my-5 image-upload">
            <label>Upload Photo</label>
            <input class="photo-upload-input" type="file" data-single="true" value="" />
        </div>
        <div class="image-view">
            <ul class="d-flex">
            </ul>
        </div>
        <div class="form-group">
            <button type="button" data-path="Clients" class="submit-button btn btn-block btn-danger">ADD</button>
        </div>
    </form>
</div>

