                    },
                    easyimage_toolbar: [
                        'EasyImageFull',
                        'EasyImageSide',
                        'EasyImageGradient1',
                        'EasyImageGradient2',
                        'EasyImageNoGradient',
                        'EasyImageAlt'
                    ]
                });

                editors.push(editor);
                editor.insertHtml($("#editor_" + editorCounter).html())
                editorCounter++;
            }


            $("form").submit(function () {
                var editorId = $(`${$(".choose-language").val()} textarea`).attr("id");
                for (var e of editors) {
                    if (e.name == editorId) {
                        $("#" + editorId).val(e.getData());
                    }
                }


            })


        })

    </script>
}