@model List<Language>
<div id="form-wrapper">
    <p>Dil seçərək aşağıdakı məlumatları doldurun.</p>
    <select id="choose-language" class="my-3 form-control">
        @{
            var counter = 0;
        }
        @foreach (Language language in Model)
        {
            if (counter == 0)
            {
                <option selected value=".@language.Name">@language.Name</option>
            }
            else
            {
                <option value=".@language.Name">@language.Name</option>
            }
            counter++;
        }
    </select>
    <form action="@Url.Action("Add","Service")"  method="post" enctype="multipart/form-data">
        <select hidden multiple name="Photos" id="photos">
            
        </select>
        @{
            counter = 0;
        }
        @foreach (Language language in Model)
        {
            if (counter == 0)
            {
                <div class="@language.Name active form-element">
                    <h4 class="my-2">@language.Name</h4>
                    <div class="form-group">
                        <label>Ad</label>
                        <input class="form-control" type="text" name="Names" value="" />
                    </div>
                    <div class="form-group">
                        <label>Qısa təsvir</label>
                        <input class="form-control" type="text" name="ShortDescs" value="" />
                    </div>
                    <div class="form-group">
                        <label>Təsvir</label>
                        <textarea class="form-control" name="Texts" value=""></textarea>
                    </div>
                </div>
            }
            else
            {
                <div class="@language.Name form-element">
                    <h4 class="my-2">@language.Name</h4>
                    <div class="form-group">
                        <label>Ad</label>
                        <input class="form-control" type="text" name="Names" value="" />
                    </div>
                    <div class="form-group">
                        <label>Qısa təsvir</label>
                        <input class="form-control" type="text" name="ShortDescs" value="" />
                    </div>
                    <div class="form-group">
                        <label>Təsvir</label>
                        <textarea class="form-control" name="Texts" value=""></textarea>
                    </div>
                </div>
            }
            counter++;
        }
        <div class="my-5 image-upload">
            <label>Şəkil yüklə</label>
            <input class="photo-upload-input" type="file" multiple value="" />
        </div>
        <div class="image-view">
            <ul class="d-flex">
            
            </ul>
        </div>

        <div class="form-group">
            <button type="button" data-path="Services" class="submit-button btn btn-block btn-danger">Yadda saxla</button>
        </div>
    </form>
</div>

