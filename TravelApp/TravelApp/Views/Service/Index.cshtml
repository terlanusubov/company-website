@model List<ServiceLanguage>
<!-- breadcrumb-banner-area -->
<div class="breadcrumb-banner-area ptb-120 bg-opacity" style="background-image:url(assets/img/slider/home-banner.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text text-center">
                    <h2>@Localizer["Service"]</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-banner-area-end -->
<!-- our-service-area-start -->
<div class="our-service-area pt-120 pb-90">
    <div class="container">
        <div class="section-title mb-60 text-center" style="background-image:url(assets/img/logo/section.png)">
            <h4>@Localizer["Our Services"]</h4>
            <h2>@Localizer["Our Services"]</h2>
        </div>
        <div class="row">
            @foreach (ServiceLanguage serviceLanguage in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="service-wrapper mb-30">
                        <div class="service-img">
                            <img src="~/Uploads/Services/@serviceLanguage.Service.Photos.FirstOrDefault()?.Path" alt="" />
                        </div>
                        <div class="service-text text-center">
                            <div class="service-icon-img">
                                <i class="flaticon-house-icon"></i>
                            </div>
                            <h2><a href="service-details.html">@serviceLanguage.Name</a></h2>
                            <p>@serviceLanguage.ShortDesc</p>
                            <a href="@Url.Action("SpecificService","Service",new { serviceId = serviceLanguage.ServiceId})">@Localizer["Read More"]</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- our-service-area-end -->