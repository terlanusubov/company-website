@model AboutModel
<!-- breadcrumb-banner-area -->
<div class="breadcrumb-banner-area ptb-120 bg-opacity" style="background-image:url(assets/img/slider/home-banner.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text text-center">
                    <h2>@Localizer["about us"]</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-banner-area-end -->
<!-- about-area-start -->
<div class="about-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="about-wrapper">
                    <div class="about-text">
                        @Html.Raw(Model.AboutLanguage?.Text)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- about-area-end -->
<!-- team-area-start -->
<div class="team-area pt-110 pb-90">
    <div class="container">
        <div class="section-info text-center mb-65">
            <h2>@Localizer["Team Member"]</h2>
        </div>
        <div class="row">
            @foreach (MemberLanguage memberLanguage in Model.MemberLanguages)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="team-wrapper mb-30">
                        <div class="team-img">
                            <a href="javascript:void(0)" ><img src="~/Uploads/Members/@memberLanguage.Member.Photo" alt="Members" /></a>
                            <div class="team-text text-center">
                                <h3>@memberLanguage.Member.Name</h3>
                                <span>@memberLanguage.Position</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- team-area-start -->

<!-- brand-area-start -->
<div class="brand-area ptb-120">
    <div class="container">
        <div class="section-info text-center mb-70">
            <h2>@Localizer["Our Clients"]</h2>
        </div>
        <div class="row">
            <div class="brand-active owl-carousel">
                @foreach (Client client in Model.Clients)
                {
                    <div class="col-md-12">
                        <div class="brand-wrapper">
                            <div class="brand-img">
                                <img src="~/Uploads/Clients/@client.Logo" alt="@client.Name">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- brand-area-end -->